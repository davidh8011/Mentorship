{
  "src_folders" : ["tests"],
  "page_objects_path": [ "pages" ],

  "test_settings" : {
    "default" : {
      "selenium_port": 4444,
      "selenium_host": "localhost",
      "silent": true,
      "screenshots": {
        "enabled": false,
        "path": ""
      }
    },
    "test_workers":{
        "enabled": true,
        "workers": "auto"
    },
    "firefox": {
      "desiredCapabilities": {
        "browserName": "firefox",
        "marionette": true
      },
      "webdriver":{
        "start_process": true,
        "server_path": "node_modules/.bin/geckodriver",
        "port": 4446
      }
    },
    "safari": {
      "desiredCapabilities": {
        "browserName": "safari",
        "alwaysMatch": {
            "acceptInsecureCerts": false
        }
      },
      "webdriver": {
          "port": 4445,
          "start_process": true,
          "server_path": "/usr/bin/safaridriver"
      }
    }
  }
}

